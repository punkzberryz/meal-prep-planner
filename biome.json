{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**",
			"prisma/**",
			"docs/**",
			"*.md",
			"*.json",
			"*.ts",
			"*.tsx",
			"!!/node_modules",
			"!!/.next",
			"!!/public",
			"!!/prisma/migrations"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	}
}
